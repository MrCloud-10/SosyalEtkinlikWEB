
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/ph1.jpg" width="1200" height="400" alt="BERABER" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Etkinliklerde Beraber Olabilmek İçin...
                    <a class="btn btn-success" asp-controller="Kullanici" asp-action="KayitOl" ="Kayıt Ol">
                        Kayıt Ol
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/ph2 .jpg" width="1200" height="400" alt="HOŞ VAKİT" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Beraber Hoş Vakit Geçirebilmek İçin...
                    <a class="btn btn-success" asp-controller="Kullanici" asp-action="KayitOl" ="Kayıt Ol">
                        Kayıt Ol
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/ph3.jpg" width="1200" height="400" alt="ANI YAKALA" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Huzurlu Anları Yakalayabilmek İçin...
                    <a class="btn btn-success" asp-controller="Kullanici" asp-action="KayitOl" ="Kayıt Ol">
                        Kayıt Ol
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/ph4.jpg" width="1200" height="400" alt="MUTLULUĞU KOVALA" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Mutluluğu Kovalayabilmek İçin...
                    <a class="btn btn-success" asp-controller="Kullanici" asp-action="KayitOl" ="Kayıt Ol">
                        Kayıt Ol
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>