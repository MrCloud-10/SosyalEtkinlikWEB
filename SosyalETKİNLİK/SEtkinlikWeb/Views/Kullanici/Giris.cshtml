@addTagHelper*,Microsoft.AspNetCore.Mvc.TagHelpers
@model SosyalEtkinlikWEB.Entities.Kullanici

@{
    ViewData["Title"] = "GİRİŞ YAPINIZ";

    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>GİRİŞ YAPINIZ</h2>

<form  method="post">
    <div>
        <label type="email" typeof="text" name="email" >E-mail Adresiniz :</label>
        <input type="email" typeof="text" name="email" class="form-control" required="" />
        @Html.ValidationMessageFor(m => m.KEmail, "", new { @style = "color:blue" })
    </div>
    <div>
        <label type="password" typeof="text" name="sifre">Şifreniz :</label>
        <input type="password" typeof="text"  name="sifre" class="form-control" required="" />
        @Html.ValidationMessageFor(m => m.KSifre, "", new { @style = "color:blue" })
    </div>
    <div>

        <button type="submit" class="btn btn-success" style="margin-top:15px">Giris</button>
    </div>


</form>

































