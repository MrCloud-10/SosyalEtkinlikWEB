@addTagHelper*,Microsoft.AspNetCore.Mvc.TagHelpers
@model SosyalEtkinlikWEB.Entities.Etkinlikler
@{
    ViewData["Title"] = "EtkinlikGuncelle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form asp-controller="Kullanici" asp-action="EtkinlikGuncelle" class="form-group" method="post">
    <h2>Etkinliğinizi Güncelleyiniz ;</h2>
    <a href="@Url.Action("EtkinlikGoster",new {id=Model.Kid})"><input type="button" class="btn btn-danger pull-right" value="Geri Dön" /></a>
    <table>
        <tr>
            <th><label asp-for="Eid" ></label></th>
            <td><input asp-for="Eid" class="form-control" readonly /></td>
        </tr>
        <tr>
            <th><label asp-for="Kid" ></label></th>
            <td><input asp-for="Kid" class="form-control" readonly /></td>
        </tr>
        <tr>
            <th>
                <label asp-for="Kategori">Kategorisi :</label>
            </th>
            <td>
                <input asp-for="Kategori"  class="form-control" required maxlength="50" />
                @Html.ValidationMessageFor(m => m.Kategori, "", new { @style = "color:blue" })

            </td>
        </tr>
        <tr>
            <th>
                <label asp-for="EIcerik">İçeriği :</label>
            </th>
            <td>
                <input asp-for="EIcerik"  class="form-control" required maxlength="500" />
                @Html.ValidationMessageFor(m => m.EIcerik, "", new { @style = "color:blue" })
            </td>
        </tr>
        <tr>
            <th>
                <label asp-for="EUcret">Ücreti(TL.KR) :</label>
            </th>
            <td>
                <input asp-for="EUcret"  class="form-control" required min="0" />
                @Html.ValidationMessageFor(m => m.EUcret, "", new { @style = "color:blue" })
            </td>
        </tr>
        <tr>
            <th>
                <label asp-for="EBiletAdet">Katılım Kapasitesi :</label>
            </th>
            <td>
                <input asp-for="EBiletAdet"  class="form-control" required min="1" />
                @Html.ValidationMessageFor(m => m.EBiletAdet, "", new { @style = "color:blue" })
            </td>
        </tr>
        <tr>
            <th>
                <label asp-for="ETarih">Tarihi :</label>
            </th>
            <td>
                <input asp-for="ETarih"  class="form-control" required min="@Model.ETarih" />
                @Html.ValidationMessageFor(m => m.ETarih, "", new { @style = "color:blue" })
            </td>
        </tr>
        <tr>
            <th></th>
            <th><button type="submit" class="btn btn-success" style="margin-top:15px">Etkinliği Güncelle</button></th>
        </tr>
    </table>
</form>

